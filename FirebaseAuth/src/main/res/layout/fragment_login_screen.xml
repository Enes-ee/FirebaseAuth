<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ee_background"
    tools:context=".LoginScreen">


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/bg_facebook"
        app:layout_constraintEnd_toEndOf="@+id/bg_facebook"
        app:layout_constraintStart_toStartOf="@+id/bg_facebook"
        app:layout_constraintTop_toTopOf="@+id/bg_facebook" />

    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/create_a_new_account"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/bg_anonymous"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/bg_anonymous"
        app:layout_constraintTop_toBottomOf="@+id/bg_anonymous" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/forgot_my_password"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvCreateAccount"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/tvCreateAccount"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateAccount" />

    <Button
        android:id="@+id/bg_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ee_google_button_ripple"
        app:layout_constraintBottom_toTopOf="@+id/bg_email"
        app:layout_constraintEnd_toEndOf="@+id/bg_anonymous"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bg_anonymous" />

    <Button
        android:id="@+id/bg_anonymous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:background="@drawable/ee_anonymous_button_ripple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ee_email_button_ripple"
        app:layout_constraintBottom_toTopOf="@+id/bg_facebook"
        app:layout_constraintEnd_toEndOf="@+id/bg_anonymous"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bg_anonymous" />

    <Button
        android:id="@+id/bg_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ee_facebook_button_ripple"
        app:layout_constraintBottom_toTopOf="@+id/bg_anonymous"
        app:layout_constraintEnd_toEndOf="@+id/bg_anonymous"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bg_anonymous" />


